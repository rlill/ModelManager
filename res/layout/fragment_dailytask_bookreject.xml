<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        layout="@layout/element_dailytask_icons" />

	<TextView
		android:id="@+id/textViewPresentation"
		android:padding="4dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/messageIcon"
		android:layout_toLeftOf="@id/messageImage"
		android:layout_below="@id/messageText"
	/>

	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/textViewPresentation"
		android:layout_toRightOf="@id/messageIcon"
		android:layout_toLeftOf="@id/messageImage"
	>

		<include layout="@layout/element_dailytask_car" />

		<include layout="@layout/element_dailytask_offer" />

		<include layout="@layout/element_dailytask_ok" />

		<include layout="@layout/element_dailytask_deny" />

	</TableLayout>
	
</RelativeLayout>
