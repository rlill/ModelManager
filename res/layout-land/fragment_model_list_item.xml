<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imageDescription"
        android:padding="10dp"
        android:src="@drawable/lightening" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <!-- 
             android:layout_span="2"      :: column 0 + 1
             android:layout_column="1"    :: skip column 0
         -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelName"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewName"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelSalary"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewSalary"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="110dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelQualityPhoto"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">

			    <RatingBar
			        android:id="@+id/ratingBarQualityPhoto"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:numStars="10"
			        android:stepSize="0.1"
			        android:isIndicator="true"
			        style="?android:attr/ratingBarStyleSmall"
		        />

		    </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelStatus"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewStatus"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelCar"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewCar"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="110dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelQualityMovie"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">

			    <RatingBar
			        android:id="@+id/ratingBarQualityMovie"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:numStars="10"
			        android:stepSize="0.1"
			        android:isIndicator="true"
			        style="?android:attr/ratingBarStyleSmall"
		        />

		    </LinearLayout>
		    
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelBalance"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewBalance"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelToday"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewToday"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="110dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelQualityTLead"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">

			    <RatingBar
			        android:id="@+id/ratingBarQualityTLead"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:numStars="10"
			        android:stepSize="0.1"
			        android:isIndicator="true"
			        style="?android:attr/ratingBarStyleSmall"
		        />

		    </LinearLayout>
		    
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelOnBoard"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewOnBoard"
		        android:layout_width="160dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelTeam"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:id="@+id/textViewTeam"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <TextView
		        android:layout_width="110dp"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:padding="4dp"
		        android:text="@string/labelMood"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">

			    <RatingBar
			        android:id="@+id/ratingBarMood"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:numStars="10"
			        android:stepSize="0.1"
			        android:isIndicator="true"
			        style="?android:attr/ratingBarStyleSmall"
		        />

		    </LinearLayout>
		    
        </TableRow>

    </TableLayout>
    
</LinearLayout>
